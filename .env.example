# AquaHarvest Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aquaharvest
POSTGRES_USER=aquaharvest_user
POSTGRES_PASSWORD=aquaharvest_password
DATABASE_URL=postgresql://aquaharvest_user:aquaharvest_password@localhost:5432/aquaharvest

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# API Gateway Configuration
API_GATEWAY_PORT=4000
GRAPHQL_PLAYGROUND=true
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Service Ports
ASSESSMENT_SERVICE_PORT=5001
ML_SERVICE_PORT=5000
GIS_SERVICE_PORT=5002
FRONTEND_PORT=3000

# External API Keys
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_EARTH_ENGINE_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
GOOGLE_EARTH_ENGINE_PRIVATE_KEY_PATH=./secrets/ee-private-key.json

# IMD (India Meteorological Department) API
IMD_API_KEY=your-imd-api-key
IMD_BASE_URL=https://api.imd.gov.in

# CGWB (Central Ground Water Board) API
CGWB_API_KEY=your-cgwb-api-key
CGWB_BASE_URL=https://api.cgwb.gov.in

# ML Model Configuration
MODEL_UPDATE_INTERVAL_HOURS=24
SATELLITE_IMAGE_CACHE_TTL=3600
RAINFALL_PREDICTION_CACHE_TTL=1800
FEASIBILITY_CACHE_TTL=900

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
MAX_REQUEST_SIZE=50mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-access-token
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-api-key
NEXT_PUBLIC_APP_NAME=AquaHarvest
NEXT_PUBLIC_APP_VERSION=1.0.0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage Configuration
UPLOAD_MAX_SIZE=10mb
STATIC_FILES_PATH=./uploads
AWS_S3_BUCKET=aquaharvest-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1

# Analytics and Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PROMETHEUS_PORT=9090

# Government Integration
GOVERNMENT_API_BASE_URL=https://api.gov.in
AADHAAR_VERIFICATION_URL=https://resident.uidai.gov.in
DIGITAL_INDIA_API_KEY=your-digital-india-api-key

# Payment Integration (for premium features)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
FACEBOOK_APP_ID=your-facebook-app-id

# Development Tools
WEBPACK_BUNDLE_ANALYZER=false
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false

# Security Configuration
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12
PASSWORD_RESET_TOKEN_EXPIRY=3600000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups